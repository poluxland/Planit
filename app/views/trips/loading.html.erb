<div class="container">
  <div class ="row justify-content-center mt-5">
    <div class="col-12 col-lg-8">
      <div class="p-5 standare" style="background-color: white; min-height: 450px">
        <div class="d-block" style="position: relative">

          <div class="d-flex justify-content-center" style="position: absolute; width: 100%; top: 80px">
            <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </div>

          <div class="text-center" style="position: absolute; width: 100%; top: 200px">
            <h3>We are preparing your awesome checklist</h3>
            <p>Please wait a few seconds</p>
          </div>

          <%= render_async confirmation_path %>

          <%= content_for :render_async %>

        </div>
      </div>
    </div>
  </div>
</div>
