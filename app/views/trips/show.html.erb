<div class="container">
  <div class ="row justify-content-center mt-5">
    <div class="col-12 col-lg-8">
      <% @trip.tasks.each do |task| %>

      <div class="card-product">
        <div class="card-product-infos ml-2">
          <h2><%= task.name %></h2>
          <p><%= task.description %></p>
        </div>
        <div class="buttons">
          <%= link_to edit_trip_task_path(task.trip, task), class: 'btn' do %>
          <i class="far fa-edit"></i>
          <% end %>
          <%= link_to trip_task_path(task.trip, task), class: 'btn', method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
