<div id="topbar" class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
      <div class=""><h2 class="m-0 p-0 text-white"><i class="fas fa-globe-americas"></i> Planit</h2></div>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" id="mobile-button">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item active" style="text-decoration: none">

          <%= link_to 'Feedback', new_feedback_path, class: "nav-link text-dark" %>
        </li>

      <% if user_signed_in? %>

        <li class="nav-item active" style="text-decoration: none">
          <%= link_to "Home", root_path, class: "nav-link text-white" %>
        </li>


        <li class="nav-item">
          <%= link_to "Dashboard", trips_path, class: "nav-link text-dark mr-2" %>
        </li>

        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.avatar_key, height: 300, width: 300, crop: :fill, gravity: :faces, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Manual Trip", new_trip_path, class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>

      <% end %>

    </ul>
  </div>
</div>


<!-- Feedback -->
<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your Feedback</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% session[:return_to] = request.original_url %>
        <% @feedback = Feedback.new  %>
        <%= render "feedbacks/form" %>
      </div>
    </div>
  </div>
</div>


