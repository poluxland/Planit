<div class="task-container">
  <div class="task-card">
    <div class='task-header d-flex'>
      <div class='check'>
        <%= render "tasks/circular_bar" %>
        <i class='far fa-<%= task.status == true ? 'check-' : '' %>square' data-task-id = '<%= task.id %>'></i>
      </div>
      <div class='info'>
        <h2><%= task.name %></h2>
        <p><%= task.description %></p>
        <div class="progress-message" data-task-id = "<%= task.id %>">
          <%= render "tasks/progress_message", task: task %>
        </div>
      </div>
    </div>
    <div class="task-buttons">
      <%= link_to edit_task_path(task), class: 'btn' do %>
      <i class="far fa-edit"></i>
      <% end %>
      <%= link_to task_path(task), class: 'btn', method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <div class="subtasks">
    <div class="subtasks-col">
      <% task.subtasks.each do |subtask| %>

      <%= render "subtasks/subtask", task: task, subtask: subtask %>

      <% end %>
    </div>
    <div class="new-subtask-btn active">
      <div class='btn' id='new-subtask-btn'>
        <div class="grab-btn d-flex align-items-center text-center"><i class="grab-btn fas fa-plus py-auto"></i><h2 class='grab-btn btn-lbl pl-2'>Add Subtask</h2></div>
      </div>
    </div>
    <div class="new-subtask-form">
      <%= render 'subtasks/create_form', task: task, subtask: Subtask.new %>
    </div>
  </div>

  <div class="task-down">
    <i class="first chevron fas fa-chevron-down"></i>
    <i class="second chevron fas fa-chevron-down"></i>
  </div>

</div>
