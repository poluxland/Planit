checkbox = document.querySelector('[data-subtask-id="<%= @subtask.id %>"]');
taskCheckbox = document.querySelector('[data-task-id="<%= @subtask.task.id %>"]');

if (checkbox.classList.value == 'far fa-check-square') {
  checkbox.classList.remove('fa-check-square')
  checkbox.classList.add('fa-square')
} else {
  checkbox.classList.remove('fa-square')
  checkbox.classList.add('fa-check-square')
}

refresh('.overview-grab',`<%= render 'tasks/overview', trip: @subtask.task.trip %>`)

refresh('.progress-message[data-task-id="<%= @subtask.task.id %>"]',
                        `<%= render "tasks/progress_message", task: @subtask.task %>`)

refreshById('check-<%= "#{@subtask.task.id}" %>',`<i class='far fa-<%= @subtask.task.status == true ? 'check-' : '' %>square' data-task-id = '<%= @subtask.task.id %>'></i>`)
